%h1.heading
  = "Contact group %s" % resource.id
  
- content_tag_for(:dl, resource) do
  %dt.label= 'Name'
  %dd.name= h resource.try(:name)
  %dt.label= 'Commission %'
  %dd.commission= h resource.try(:commission)
  %dt.label= 'Contacts in this group'
  %dd.contacts
    %ol
    -resource.contacts.each do |contact|
      %li=contact.name
  
%p.actions
  = link_to 'Edit', edit_resource_path(resource)
  |
  = link_to 'Index', collection_path
