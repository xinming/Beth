!!! Strict
%html{:lang => "en", "xml:lang" => "en", :xmlns => "http://www.w3.org/1999/xhtml"}
  %head
    %meta{:content => "text/html; charset=utf-8", "http-equiv" => "Content-Type"}/
    
    = stylesheet_link_tag "reset", :media => "screen"
    = stylesheet_link_tag "960", :media => "screen"
    = stylesheet_link_tag "text", :media => "screen"
    = stylesheet_link_tag "application", :media => "screen"

    = javascript_include_tag :defaults
    
    
    %title Peter Fashion Factory System | http://factory.peterfashion.com
  %body
    / Top: Begin    
    #top
      .container_16
        #top_logo.grid_8
          %img{:src => "/images/icons/monitor.png"}/
          %h1 Peter Fashion Factory System
        #top_menu.grid_8
          %a.button{:href => "#"} Logout
        .clear
    / Top: End    / Body: Begin    
    .container_16
      #notifications.grid_16
        - if not flash.empty?
          %ul
            - flash.each do |type, msg|
              %li{ :class => type }= msg 
      .clear



      #main.grid_12
        .grid_12.alpha.omega
          .box
            = yield
        .clear
        #actions_bottom
          = yield :sub_menu
        .clear

      #sidebar.grid_4 
        %ul
          %li.first.last.expanded
            %a.title.active{:href => "#index"}
              %img{:src => "/images/icons/briefcase.png"}>/
              Back Office
            %a.toggle
            .content
              %ul
                %li= link_to image_tag("icons/basket.png") + "Incoming Orders", incoming_orders_path                
                %li= link_to image_tag("icons/book_addresses.png") + "Customers", customers_path                
                %li= link_to image_tag("icons/book_addresses.png") + "Daily sales report", daily_path('today')                
                %li=# link_to image_tag("icons/book_addresses.png") + "Customer sales report", customer_report_path              


        %ul
          %li.first.last
            %a.title.active{:href => "#system"}
              %img{:src => "/images/icons/cog.png"}>/
              System Settings
            %a.toggle
            .content
              %ul
                %li= link_to image_tag("icons/table.png") + "Item Types", item_types_path                
                %li= link_to image_tag("icons/table.png") + "Item Type Costs", item_type_costs_path

        
        %ul
          %li.expanded.first
            %a.title{:href => "#"}
              %img{:src => "/images/icons/images.png"}>/
              Actions
            %a.toggle
            .content
              %ul
                =yield :sub_menu
          %li.last
            %a.title{:href => "#"}
              %img{:src => "/images/icons/door_in.png"}>/
              Logout


      .clear

      #footer
        .grid_8
          %p
            - succeed "." do
              %a{:href => "http://designgonemad.com"} Design Gone Mad
            Copyright 2010, All rights reserved.
        .grid_8.right
          \&nbsp;
    / Body: End    
    %script{:src => "/javascripts/jquery.js", :type => "text/javascript"}
    %script{:src => "/javascripts/dashboard.js", :type => "text/javascript"}
